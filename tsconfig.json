{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist/",
    //"sourceMap": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src/",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  }
}
